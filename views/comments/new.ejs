<%- include('../partials/header'); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campground</h1>
        <div style="width:30%; margin:25px auto;">
            <form action="/campgrounds" method="POST">
            
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="name"  name="name" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="Tell us more about your campground" id="">
                    </div>
                    <div class="form-group" style="text-align: center;">
                        <button class="btn btn-lg btn-primary" type="submit" style="text-align: center;">Submit!</button>
                    </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>   
    </div>
</div>



